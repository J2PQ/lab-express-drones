<h2>Available drones</h2>

<ul>
  {{#each drones}}
  <h3>{{name}}</h3>
  <li>Propellers: {{propellers}}</li>
  <li>Max speed: {{maxSpeed}}</li>
  <a href="/drones/{{_id}}/edit">Edit</a>
  <form action="/drones/{{_id}}/delete" method="POST" style="display: inline">
    <input type="submit" value="Delete drone" class="btn btn-danger">
  </form>
  {{/each}}
</ul>